rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // System collections - only Cloud Functions can write
    match /system/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend functions
    }
    
    // Flow execution logs
    match /flows/{flowId} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend functions
    }
    
    // Analytics cache
    match /analytics/{date} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend functions
    }
    
    // Leads/CRM data
    match /leads/{leadId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Competitor intel
    match /competitors/{competitorId} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend functions
    }
  }
}
